{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run C# File",
            "type": "shell",
            "command": "./run-cs.sh",
            "args": ["${file}"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-current-file",
            "type": "shell",
            "command": "mkdir -p temp_run && cd temp_run && dotnet new console -n TempRun --force --no-restore && cp '${file}' TempRun/Program.cs && cd TempRun && dotnet restore && dotnet build",
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "cleanup-temp",
            "type": "shell",
            "command": "rm -rf temp_run",
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "never"
            }
        }
    ]
}